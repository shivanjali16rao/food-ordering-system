// Payment Function
void payment()
{
char b;
time_t rawtime;struct tm * timeinfo;time ( &rawtime );timeinfo = 
localtime ( &rawtime );
cout<< (asctime (timeinfo));
 char tran[10],upiid[10];
 int quantity, total,pm,pop,cvv,expm,expy;
 pay:
 cout<<"\n\n Payment :";
 cout<<"\n\n Press 1 to initiate Online payment"<<endl;
 cin>>pm;
 if (pm==1)
 { online:
 system("cls");
 cout<<"\t\t\t\t------------------\n";
 cout<<"\t\t\t\t| Online Payment |";
 cout<<"\n\t\t\t\t------------------";
 cout<<"\n\n 1. UPI";
 cout<<"\n 2. Credit/ Debit Card";
 cout<<"\n\n Please choose payment option :";
 cin>>pop;
 if (pop==1)
 {
 system("cls");
 cout<<"\t\t\t\t------------------\n";
 cout<<"\t\t\t\t| Online Payment |";
 cout<<"\n\t\t\t\t------------------";
 cout<<"\n\n ! UPI payment !";
 cout<<"\n\n Your UPI ID :";
 cin>>upiid;
 cout<<"\n $ Go to your online payment app and make payment\n and 
copy the transaction id paste bellow :)\n";
 cout<<"\n Transaction ID :";
 cin>>tran;
 system("cls");
 cout<<"\n\t\t\t\t -----------------------------";
 cout<<"\n\t\t\t\t | RED RAVEN CAFE |";
 cout<<"\n\t\t\t\t -----------------------------";
 cout<<"\n -----------------------------------------------------";
 cout<<"\n Your total Bill is :Rs."<<tot<<" (Paid via UPI)";
 cout<<"\n -----------------------------------------------------";
 cout<<"\n Your order will be delivered in 25-30 minutes";
 cout<<"\n -----------------------------------------------------";
 cout<<"\n Thank you for ordering from RED RAVEN CAFE :)";
 cout<<"\n -----------------------------------------------------\n\n";
 exit (0);
 }
 else if (pop==2)
 {
 system("cls");
 cout<<"\t\t\t\t------------------\n";
 cout<<"\t\t\t\t| Online Payment |";
 cout<<"\n\t\t\t\t------------------";
 cout<<"\n\n ! Credit/ Debit Card !";
 cout<<"\n\n Enter card details :";
 card:long long int cnu;
 cout<<"\n\n Card number (16 digit) :";
 cin>>cnu;
 int cocnu=0;
 while(cnu!=0)
 {
 cnu=cnu/10;
 cocnu++;
 }
 if(cocnu!=16)
 {
 cout<<"\n Invalid Card number.";
 goto card;
 }
 cvvvv:
 cout<<"\n\n CVV (3 digit) :";
 cin>>cvv;
 int cocvv=0;
 while(cvv!=0)
 {
 cvv=cvv/10;
 cocvv++;
 }
 if(cocvv!=3)
 {
 cout<<"\n Invalid CVV number.";
 goto cvvvv;
 }
 cout<<"\n\n Exp. date :";
 expdate:
 cout<<"\n Month(MM) :";
 cin>>expm;
 int mm=expm;
 int coexpm=0;
 while(expm!=0)
 {
 expm=expm/10;
 coexpm++;
 }
 if(coexpm>2 || mm == 0)
 {
 cout<<"\n Invalid Exp date.";
 goto expdate;
 }
 else if (mm > 12)
 {
 cout<<"\n Invalid Exp date.";
 goto expdate;
 }
 cout<<"\n Year(YYYY) :";
 cin>>expy;
 int yy=expy;
 int coexpy=0;
 while(expy!=0)
 {
 expy=expy/10;
 coexpy++;
 }
 if(coexpy!=4)
 {
 cout<<"\n Invalid Exp date.";
 goto expdate;
 }
 else if (yy < 2022)
 {
 cout<<"\n Invalid Exp date.";
 goto expdate;
 }
 cout<<"\n\n Processing";
 for (int i = 0; i < 4; i++)
 {
 cout<<".";
 Sleep(1000);
 }
 system("cls");
 cout<<"\n\t\t\t\t -----------------------------";
 cout<<"\n\t\t\t\t | RED RAVEN CAFE |";
 cout<<"\n\t\t\t\t -----------------------------";
 cout<<"\n -----------------------------------------------------";
 cout<<"\n Your total Bill is :Rs."<<tot<<" (Paid via ATM Card)";
 cout<<"\n -----------------------------------------------------";
 cout<<"\n Your order will be delivered in 25-30 minutes";
 cout<<"\n -----------------------------------------------------";
 cout<<"\n Thank you for ordering from RED RAVEN CAFE :)";
 cout<<"\n -----------------------------------------------------\n\n";
 exit(0);
 }
 {system("cls");
 cout<<"\n Please choose valid payment method "<<endl;
 goto pay;
}
 char e;
e=getche();
if(e=='b')
{
system("cls");
func();
}
} }
