{
c=getche();
if(c=='1')
{
system("cls");
appetizers();
}
if(c=='2')
{
system("cls");
dosas();
}
if(c=='3')
{
system("cls");
southindianfavs();
}
if(c=='4')
{
system("cls");
beverages();
}
else
{
cout<<"\n invalid input \n";
}
}
while(c!='b');
if(c=='b')
{
system("cls");
func();
}
}
